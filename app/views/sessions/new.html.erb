<style>
  body {
    min-height: 100vh;
    background-image: linear-gradient(120deg, #3498db, #8e44ad);
    margin: 0;
    font-family: "Segoe UI";
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100vh;
  }

  .login-form {
    width: 360px;
    background: #f1f1f1;
    padding: 40px;
    border-radius: 10px;
    box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.1);
  }

  .login-form h2 {
    text-align: center;
    color: #333;
    margin-bottom: 30px;
  }

  .txtb {
    position: relative;
    margin: 20px 0;
  }

  .txtb input {
    font-size: 15px;
    color: #333;
    border: none;
    width: 100%;
    outline: none;
    background: none;
    padding: 10px;
    border-bottom: 2px solid #adadad;
  }

  .logbtn {
    display: block;
    width: 100%;
    height: 50px;
    border: none;
    background: linear-gradient(120deg, #3498db, #8e44ad);
    background-size: 200%;
    color: #fff;
    outline: none;
    cursor: pointer;
    transition: 0.5s;
  }

  .logbtn:hover {
    background-position: right;
  }

  .bottom-text {
    margin-top: 20px;
    text-align: center;
    font-size: 13px;
    color: #555;
  }
</style>

<div class="login-form">
  <h2>Payroll Login</h2>
  <%= form_with(url: sessions_path, method: 'post') do |form| %>
    <div class="txtb">
      <%= form.label :email, class: "hidden" %>
      <%= form.text_field :email, placeholder: "Username" %>
    </div>
    <div class="txtb">
      <%= form.label :password, class: "hidden" %>
      <%= form.password_field :password, placeholder: "Password" %>
    </div>
    <%= form.submit 'Login', class: "logbtn" %>
  <% end %>
  <div class="bottom-text">
    Don't have an account? <%= link_to "Sign up", "#" %>
  </div>
</div>

